<?php

class Plugins {
	public $pluginpath;
	
	public function __construct() {
		$this->pluginpath = PLUGIN_PATH;
	}
	
	public function LoadPlugins() {
		foreach(glob($this->pluginpath.'/*/plugin.xml') as $plugin) {
			$settings = simplexml_load_file($plugin);
			if($settings->settings->status == 1) {
			$pluginfile = str_replace("plugin.xml", "plugin.tpl", $plugin);
				include_once($pluginfile);
			
			}
		}
	}
}